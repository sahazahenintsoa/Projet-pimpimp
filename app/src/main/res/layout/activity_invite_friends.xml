<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    tools:context=".InviteFriendsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_type3"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/design_toolbar_general" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/inviteQueryImg"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/invite_banner" />

            <com.view.MTextView
                android:id="@+id/shareTxtLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="SHARE YOUR INVITE CODE"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/default_shadow_color"
                android:textSize="@dimen/txt_size_14" />


            <com.view.MTextView
                android:id="@+id/invitecodeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/appThemeColor_1"
                android:textSize="@dimen/txt_size_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.view.MTextView
                    android:id="@+id/shareTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#88757575"
                    android:textSize="@dimen/txt_size_16" />

                <com.view.MTextView
                    android:visibility="gone"
                    android:id="@+id/detailTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/appThemeColor_1"
                    android:textSize="@dimen/txt_size_16" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/btn_type3"
        layout="@layout/btn_type_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_btn_height"
        android:layout_alignParentBottom="true" />


</RelativeLayout>

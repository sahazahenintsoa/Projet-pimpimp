<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F5"
    android:orientation="vertical"
    tools:context=".AppLoginActivity">

    <!--<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        app:cardBackgroundColor="#F0F4F5"
        android:padding="1dp">-->

    <com.view.MaterialTabs
        android:id="@+id/material_tabs"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#F0F4F5"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:mtIndicatorColor="@color/appThemeColor_1"
        app:mtPaddingMiddle="false"
        app:mtSameWeightTabs="true"
        app:mtTabPaddingLeftRight="20dp"
        app:mtTextColorSelected="#242424"
        app:mtTextColorUnSelected="#878787" />
    <!--</android.support.v7.widget.CardView>-->

    <android.support.v4.view.ViewPager
        android:id="@+id/appLogin_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".AppLoginActivity" />

    <com.view.MTextView
        android:id="@+id/orLoginWithTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:padding="10dp"
        android:text="Or Sign in with"
        android:textColor="#666666"
        android:textSize="@dimen/txt_size_16" />

    <com.view.MTextView
        android:id="@+id/fbTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_fb_border"
        android:paddingBottom="10dp"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:paddingTop="10dp"
        android:text="Facebook"
        android:textColor="#666666"
        android:textSize="@dimen/txt_size_16" />
    <com.view.MTextView
        android:id="@+id/lien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_fb_border"
        android:paddingBottom="10dp"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:paddingTop="10dp"
        android:text="@string/forgot"
        android:textColor="#666666"
        android:textSize="@dimen/txt_size_16" />


</LinearLayout>
